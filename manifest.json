{
  "manifest_version": 3,
  "name": "ChatGPT Auto Responder",
  "version": "5.0",
  "description": "Sends a user-defined prompt to ChatGPT, gets a response, and shows a notification or opens a link. Can be scheduled.",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon48.png"
    }
  },
  "icons": {
    "48": "images/icon48.png"
  }
}