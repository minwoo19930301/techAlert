{
  "manifest_version": 3,
  "name": "ChatGPT Task Scheduler",
  "version": "1.1",
  "description": "TESTING UPGRADES",
  "update_url": "https://github.com/minwoo19930301/techAlert/raw/refs/heads/main/updates.xml",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon48.png"
    }
  },
  "icons": {
    "48": "images/icon48.png"
  }
}